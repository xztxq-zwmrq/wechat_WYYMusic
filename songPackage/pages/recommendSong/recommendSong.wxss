.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-43%, -35%);
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 80rpx;
}
/* 列表区域 */
/* 头部区域 */
.listContianer {
  position: relative;
  top: -20rpx;
  border-radius: 20rpx;
  background-color: #fff;
}
.listContianer .listHeader {
  display: flex;
  padding: 30rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #ededed;
}
/* 内容区域 */
.listScroll {
  height: calc(100vh - 405rpx);
}
.scrollItem {
  position: relative;
  display: flex;
  padding: 10rpx 30rpx;
}
.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musicInfo text {
  height: 40rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 40rpx;
  font-size: 24rpx;
}
.scrollItem .iconfont {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 30rpx;
  line-height: 80rpx;
  text-align: center;
}
